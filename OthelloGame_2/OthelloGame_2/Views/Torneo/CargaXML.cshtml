
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content" style="background-color: white;">
    @{
        if (!string.IsNullOrEmpty(ViewBag.algo)) // en caso de que no se haya  registrado el torneo
        {
            //message tiene valor
            <div class="alert alert-danger" data-dismiss="alert" id="succes-alert" role="alert">@ViewBag.algo</div>
        }
    }
    <h2>Cargar Archivo de Torneo</h2>
    @using (Html.BeginForm("CargaXML", "Torneo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="row">
            <div class="col-md-6 col-lg-offset-3">
                <div class="form-group">
                    <label for="file">Escoger Archivo</label>
                    <input type="file" name="file" id="file" />
                </div>
                <div class="form-group" style="text-align:right;">
                    <input type="submit" class="btn btn-success" value="Cargar Torneo" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/mensajes.js")
}