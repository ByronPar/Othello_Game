
@{
    ViewBag.Title = "Inicio de Sesión";
}

<link rel="stylesheet" type="text/css" href="~/Content/Login.css" />

<div class="login-wrap">
    <div class="login-html">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                //message tiene valor

                <div class="alert alert-danger" data-dismiss="alert" id="succes-alert" role="alert">@ViewBag.Message</div>
                <script>
                    //autoclose
                    window.setTimeout(function () {
                        $(".alert").fadeTo(1500, 0).slideDown(1000, function () {
                            $(this).remove();
                        });
                    }, 2700);  // 3 segundos y desaparece
                </script>

            }

        }
    <center><input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Iniciar Sesión</label></center>
        <div class="login-form">
            <!--   ventana de login -------------------------------------------------------------------- -->
            <div class="sign-in-htm">
                <form action="/Home/Login" method="post">
                    <div class="hr"></div>
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <center><input id="username" type="text" class="input" name="username"></center>
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <center><input id="contrasenia" type="password" class="input" data-type="password" name="contrasenia"></center>
                    </div>
                    <div class="group">
                        <button class="button" type="submit">Iniciar Sesion</button>
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a>DISFRUTA DEL JUEGO DE LA MENTE</a>
                    </div>
                    <div class="hr"></div>
                </form>
            </div>
        </div>
    </div>
</div>
